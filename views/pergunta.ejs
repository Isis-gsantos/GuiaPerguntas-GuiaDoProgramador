<%- include('partials/header.ejs') %>

<body>
    <%- include('partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>

        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <!-- o textarea vai receber o corpo da resposta -->
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <!-- dentro desse campo input vai ser carregado o id da pergunta na qual estou respondendo, ele não vai aparecer na tela (tipo hidden, campo que existe no formulário mas não existe para o usuário) -->
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
    </div>
</body>

<%- include('partials/footer.ejs') %>